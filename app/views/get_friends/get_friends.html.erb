				<%= current_user.full_name %> 
		     	<div class="centered">
					<div class="btn-group">
						<button type="button" class="btn btn-default btn-lg">
							<span class="glyphicon glyphicon-remove"></span>
						</button>
						<button type="button" class="btn btn-default btn-lg">
							<span class="glyphicon glyphicon-user"></span>
						</button>

						<button type="button" class="btn btn-default btn-lg">
							<span class="glyphicon glyphicon-ok"></span>
						</button>
					</div>
				</div>
		      </div>
		    </div>
		   
		  </div>

		</div>
	</div>
</div>




