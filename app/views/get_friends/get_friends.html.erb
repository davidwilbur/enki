

<div class="container">

	<div id="profile_view" style="margin-top: 50px;">

		<div id="carousel-example-generic" class="carousel" data-ride="carousel">

		  <!-- Wrapper for slides -->
		  <div class="carousel-inner">

		    <div class="item active">
		      <img data-src="holder.js/900x500/auto/#777:#7a7a7a/text:First slide" alt="First slide" src="data:image/svg+xml;base64,">
		      <div class="carousel-caption">
