<div class="container">
  <legend>
    <h2>Edit My Profile</h2>
  </legend>

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">Contact</a></li>
      <li><a href="#tab2" data-toggle="tab">Pictures</a></li>
      <li><a href="#tab3" data-toggle="tab">Languages</a></li>
      <li><a href="#tab4" data-toggle="tab">About Me</a></li>
      <li><a href="#tab5" data-toggle="tab">Change Password</a></li>
      <li><a href="#tab6" data-toggle="tab">Account</a></li>
    </ul>


<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
<div class="tab-content">
  <div class="tab-pane active" id="tab1">
    <fieldset>
      <legend>About Me</legend>
      <%= f.input :first_name, input_html: { class: 'input-sm' } %>
      <%= f.input :last_name, input_html: { class: 'input-sm' } %>
      <%= f.input :email, input_html: { class: 'input-sm' } %>
      <%= f.input :skype, input_html: { class: 'input-sm' } %>
    </fieldset>
  </div>
  <div class="tab-pane" id="tab2">
    <fieldset>
      <legend>Profile Picture</legend>
      <%= f.input :avatar, as: :file %>
      <%= bootstrap_paperclip_picture f, :avatar %>
    </fieldset>
  </div>
  <div class="tab-pane" id="tab3">
    <fieldset>
      <legend>Languages</legend>
   
      <div class="container">
   
      <div class="input-group">
        <div class="input-group-btn">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Select Language <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a href="#">English</a></li>
            <li><a href="#">Spanish</a></li>
            <li><a href="#">Chinese</a></li>
          </ul>
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Select Ability <span class="caret"></span></button>
          <ul class="dropdown-menu pull-right">
            <li><a href="#">Beginner</a></li>
            <li><a href="#">Elementary</a></li>
            <li><a href="#">Intermediate</a></li>
            <li><a href="#">Advanced</a></li>
            <li><a href="#">Fluent</a></li>
            <li><a href="#">Native</a></li>
          </ul>
        </div><!-- /btn-group -->
        
      </div><!-- /input-group -->
      <br>
       <div class="input-group">
        <div class="input-group-btn">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Select Language <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a href="#">English</a></li>
            <li><a href="#">Spanish</a></li>
            <li><a href="#">Chinese</a></li>
          </ul>
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Select Ability <span class="caret"></span></button>
          <ul class="dropdown-menu pull-right">
            <li><a href="#">Beginner</a></li>
            <li><a href="#">Elementary</a></li>
            <li><a href="#">Intermediate</a></li>
            <li><a href="#">Advanced</a></li>
            <li><a href="#">Fluent</a></li>
            <li><a href="#">Native</a></li>
          </ul>
        </div><!-- /btn-group -->
        
      </div>
    </div>
     </fieldset>
  </div>
  <div class="tab-pane" id="tab5">
    <fieldset>
      <legend>Update Password</legend>
      <%= f.input :password, hint: "Leave blank if you don't want to change it", input_html: { class: 'input-xxlarge', autocomplete: 'off' } %>
      <%= f.input :password_confirmation, input_html: { class: 'input-xxlarge', autocomplete: 'off' } %>
    </fieldset>
  </div>
  <div class="tab-pane" id="tab6">
    <fieldset>
      <legend>Account Settings</legend>
      <div class="form-actions well">
        <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn btn-danger' %>
      </div>
    </fieldset>
  </div>
<br />
  <fieldset>
    <legend>Confirm Changes</legend>
    <%= f.input :current_password, hint: "We need your current password to confirm your changes (email and password changes only).", input_html: { class: 'input-xxlarge', autocomplete: 'off' } %>
  </fieldset>
  <br/>

  <div class="form-actions well">
    <%= f.submit "Update", class: 'btn btn-primary' %>
    <%= link_to "Back", root_path, class: 'btn btn-default' %>
    <%= link_to "View My Profile", profile_path(current_user), class: 'btn btn-default pull-right' %>
  </div>
<% end %>
<br/>
</div>
</div>
</div>







