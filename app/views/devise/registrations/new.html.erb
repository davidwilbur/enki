
<div class="row">
  <div class="col-md-4">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well form-vertical well-small"}) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <legend>Sign up</legend>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :profile_name %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
      </fieldset>
        <div><%= f.button :submit, "Sign up" %></div>
        <%= render "devise/shared/links" %>
    <% end %>
  </div>
  <div class="col-md-8">
    <h2>Sign up with Facebook.</h2>

    <%= button_to user_omniauth_authorize_path(:facebook), class: "btn btn-facebook" do %>
        <i class="fa fa-facebook"></i> | Sign up with Facebook
        <% end %>

  </div>
</div>
